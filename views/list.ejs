<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/main.css">
  <title>List</title>
</head>

<body class="gray-bg">
  <%- include('nav.ejs', { user : user}) %>
  <input class="search">
  <button class="search-send">검색</button>
  <div class="white-bg">
    <% for (var i=0; i < 글목록.length; i++){ %>

    <div class="list-box">
      <h4>
        <a href="/post/detail/<%= 글목록[i]._id %> ">
          <%= 글목록[i].title %>
        </a>
      </h4>
      <p>
        <%= 글목록[i].content %>
        <a href="/post/edit/<%= 글목록[i]._id %>">✏️</a>
        <!-- <span class="edit" data-id="<%= 글목록[i]._id %>">✏️</span> -->
        <span class="delete" data-id="<%= 글목록[i]._id %>">🗑️</span>
      </p>
    </div>
    <% } %>
    <!-- <div class="listNum">
      <span>
        <% if (글목록.length > 0 ) { %>  
          <a href="/list/prev/<%= 글목록[0]._id %>">↩</a>
          <a href="/list/next/<%= 글목록[글목록.length - 1]._id %>">↪</a>
          <% } %>
      </span>
    </div>
  </div> -->
    <script>
    
      const searchBtn = document.querySelector('.search-send');
      searchBtn.addEventListener('click', () => {
        let searchValue = document.querySelector('.search').value;
        location.href = '/search?val=' + searchValue;
      })


      const del_btn = document.querySelectorAll('.delete');
      for (let i = 0; i < del_btn.length; i++) {
        del_btn[i].addEventListener('click', function(e) {
          fetch('/post/delete?docid=' + e.target.dataset.id, {
              method: 'DELETE'
            })
            .then(res => res.text())
            .then(res => {
              console.log(res)
              if (res == '로그인안함') {
                alert('로그인 먼저 해주세요.')
                location.href = '/login'
              }
              if (res == "success") {
                alert("문서가 정상적으로 삭제 되었습니다.")
                location.reload()
              }
              if (res == 'Notfound') {
                alert("문서를 찾을 수 없거나 작성자가 아닙니다.")
              }
            })
        })
      }
    </script>
</body>

</html>